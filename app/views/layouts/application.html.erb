<!DOCTYPE html>
<html>
<head>
  <title>Upstage</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="google-site-verification" content="9SrhBkqkEqvCNxXfOkVdkWCMY6Qvk1TMWyboM4p_D3E" />
</head>
<body>
  <nav>
    <ul>NAVIGATION
      <%= link_to "Home/Logo", :root %>
      <%= link_to "Productions", productions_path %>
      <%= link_to "Companies", companies_path %>
      <%= link_to "About", about_path %>
      <% if current_user %>
        <%= link_to "Dashboard", user_path(current_user) %>
        <%= link_to "Sign Out", logout_path, method: :delete %>
      <% else %>
        <%= link_to "Sign In", "/auth/twitter", id: 'sign-in-link' %>
        <%= link_to "Create Account", "/auth/twitter" , id: "create-account-link" %>
      <% end %>

    </ul>
  </nav>

<%= yield %>

  <footer>
    Footer!
  </footer>

<%= render 'modals/sign_in' %>
<%= render 'modals/create_account' %>

</body>
</html>
