Register Your Company


<%= form_for @company, url: {action: "create"}, html: { multipart: true } do |f| %>
	<%= render 'shared/errors', object: @company %>
	<%= f.label :name, "* Name" %><br>
	<%= f.text_field :name %><br>
	<%= f.label :email, "* Email" %><br>
	<%= f.text_field :email %><br>
	<%= f.label :url, "* Website"%><br>
	<%= f.text_field :url %><br>
	<%= f.label :phone %><br>
	<%= f.number_field :phone %><br>
	<%= f.label :short_description, "* Short Description" %><br>
	<%= f.text_area :short_description, size: "60x2" %><br>
	<%= f.label :long_description, "* Long Description" %><br>
	<%= f.text_area :long_description, size: "60x12" %><br>

	<%= f.label :image, "* Image" %>
	<%= f.file_field :image %><br>

	<label>Coming Soon: Add your company members!</label><br>

	<%= f.submit "Register Company" %>
<% end %>